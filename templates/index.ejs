<%- include('partials/header', { showButtons: showNav || false }) %>
<div class="container" ng-app="StudentBot">
    <h1>StudentBot <small class="text-muted">Ask me (almost) anything</small></h1>
    
    <div id="demo" ng-controller="chatbotCtrl" ng-show="!loading" ng-cloak>
        <div id="chatBotCommandDescription"></div>
        <input id="humanInput" type="text" placeholder="Zapytaj o coś..." />

        <div class="button" onclick="$('#chatBotCommandDescription').slideToggle();" style="margin-right:10px">O co możesz mnie np zapytać?
        </div>

        <div style="clear: both;">&nbsp;</div>

        <div id="chatBot">
            <div id="chatBotThinkingIndicator"></div>
            <div id="chatBotHistory"></div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.7/angular.min.js"></script>
<script src="/js/chatbot.min.js"></script>
<script src="/js/main.js"></script>
